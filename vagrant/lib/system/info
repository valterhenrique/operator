#!/bin/bash

logo(){
  echo "--------------------------------------------------------------------------------------"
  echo '\_____  \\______   \_   _____/\______   \  /  _  \__    ___/\_____  \\______   \'
  echo ' /   |   \|     ___/|    __)_  |       _/ /  /_\  \|    |    /   |   \|       _/'
  echo '/    |    \    |    |        \ |    |   \/    |    \    |   /    |    \    |   \'
  echo '\_______  /____|   /_______  / |____|_  /\____|__  /____|   \_______  /____|_  /'
  echo '        \/                 \/         \/         \/                 \/       \/ '
  echo "--------------------------------------------------------------------------------------"
}

show_ip(){
  local ip=$(/sbin/ifconfig eth0 | grep 'inet addr:' | cut -d: -f2 | awk '{ print $1 }')
  echo "IP: ${ip}"
}

show_fqdn(){
  echo "FQDN: $(hostname -f)"
}

logo
show_ip
show_fqdn
